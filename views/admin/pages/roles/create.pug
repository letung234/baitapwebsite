extends ../../layouts/default.pug

block main 
   if(role.permission.includes("roles_create"))
      div(class="max-w-2xl mx-auto bg-white p-6 rounded-2xl shadow-lg dark:bg-gray-800")
         h1(class="text-2xl font-semibold text-gray-800 dark:text-white flex items-center gap-2 mb-6")
            i(class="fas fa-user-shield text-blue-500")
            | Thêm mới nhóm quyền
         
         form(
            action=`${prefixAdmin}/roles/create`
            method="POST"
            class="space-y-4"
         )
            div(class="space-y-2")
               label(for="title" class="block text-gray-700 dark:text-gray-300 font-medium") Tiêu đề
               input(
                  type="text"
                  class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                  id="title"
                  name="title"
                  required
               )
            
            div(class="space-y-2")
               label(for="desc" class="block text-gray-700 dark:text-gray-300 font-medium") Mô tả
               textarea(
                  class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                  id="desc"
                  name="description"
                  rows="5"
               )
            
            div(class="flex justify-end")
               button(
                  type="submit"
                  class="flex items-center gap-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition-all"
               )
                  i(class="fas fa-plus-circle")
                  | Tạo mới
