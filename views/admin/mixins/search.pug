mixin objectSearch(keyword)
   form(action="" id="form-search" class="w-full max-w-md mx-auto")
         div(class="flex gap-2")
            input(
                type="text"
                placeholder="Nhập từ khóa"
                name="keyword"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-green-500"
                value=keyword
            )
            button(
                class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors duration-200"
                type="submit"
            ) Tìm
