mixin filter-status(filterStatus)
    div(class="flex flex-wrap gap-2 mb-4")
        each item in filterStatus 
            button(
                class=`px-4 py-2 rounded-lg border border-green-500 text-green-500 hover:bg-green-500 hover:text-white transition-colors duration-200 text-sm font-medium ${item.class}`
                button-status=item.status
            ) #{item.name}