mixin alert-success(time)
  - if (messages.success)
    .message.info.fixed.top-4.right-4.w-full.max-w-xs.z-50
      div(
        class="alert alert-success bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded-lg shadow-lg flex justify-between items-center animate-slideIn"
        show-alert
        data-time=time
      )
        div.flex.items-center
          svg.w-5.h-5.mr-2.fill-current(viewBox="0 0 20 20")
            path(d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z")
          | #{messages.success}
        span(
          close-alert
          class="ml-4 cursor-pointer font-bold text-green-900 hover:text-green-700 transition-colors"
        ) &times;

mixin alert-error(time)
  - if (messages.error)
    .message.info.fixed.top-4.right-4.w-full.max-w-xs.z-50
      div(
        class="alert alert-danger bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-lg shadow-lg flex justify-between items-center animate-slideIn"
        show-alert
        data-time=time
      )
        div.flex.items-center
          svg.w-5.h-5.mr-2.fill-current(viewBox="0 0 20 20")
            path(d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z")
          | #{messages.error}
        span(
          close-alert
          class="ml-4 cursor-pointer font-bold text-red-900 hover:text-red-700 transition-colors"
        ) &times;