extends ../../layouts/default.pug
block main
  main.bg-gray-50.min-h-screen
    //- Header category
    section.bg-white.shadow-sm
      .max-w-6xl.mx-auto.px-4.py-12.text-center
        h1.text-4xl.font-bold.text-gray-900.mb-4= category.title
        p.text-gray-600.max-w-2xl.mx-auto!= category.description
    
    //- Danh sách bài viết
    section.max-w-6xl.mx-auto.px-4.py-8
      div(class=" grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6")
        each blog in blogs
          article(class=" bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition")
            a(href=`/blogs/${blog.slug}`)
              if blog.thumbnail
                img.w-full.h-48.object-cover(src=blog.thumbnail, alt=blog.title)
              .p-4
                h3.font-semibold.text-lg.mb-2= blog.title
                .text-gray-500.text-sm.mb-2!= blog.content.slice(0, 100) + "..."
                .flex.items-center.gap-4.text-sm.text-gray-500
                  .flex.items-center.gap-1
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    span= moment(blog.createdAt).format("DD/MM/YYYY")
                  .flex.items-center.gap-1
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                    span= `${blog.views} views`

        else
          p.text-gray-500.text-center.w-full.py-12 Chưa có bài viết nào trong danh mục này